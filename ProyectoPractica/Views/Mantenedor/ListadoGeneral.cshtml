@model List<ClienteModel>
@{
    ViewData["Title"] = "ListadoGeneral";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Listado General de Clientes
  </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          @TempData["Mensaje"]
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


  <div class="card-body">
     <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success"><i class="bi bi-person-plus-fill"></i> Agregar nuevo cliente</a>
     <hr />

     <table class="table table-bordered table-responsive">
         <thead>
             <tr class="text-center">
                 <th>Nombre del Cliente</th>
                 <th>Apellido Paterno</th>
                 <th>Apellido Materno</th>
                 <th>Estatus</th>
                 <th> Acciones </th>
             </tr>
         </thead>

         <tbody>
                @foreach ( var item in Model){
                    <tr class="text-center">
                        <td>@item.nombre_cliente</td>
                        <td>@item.primer_apellidocliente</td>
                        <td>@item.segundo_apellidocliente</td>
                        <td>@item.estatus</td>
                        <td>
                          <a asp-action="InformacionCliente" asp-controller="Mantenedor" class="btn btn-info btn-sm" asp-route-idCliente="@item.idCliente"><i class="bi bi-info-circle-fill"></i> </a>
                          <a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-warning btn-sm" asp-route-idCliente="@item.idCliente"> <i class="bi bi-ui-checks"></i> Evaluar </a> 
                        </td>
                    </tr>
                }
            </tbody>

     </table>

  </div>
</div>


